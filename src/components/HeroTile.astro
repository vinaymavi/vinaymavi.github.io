---
export interface Props {
  title: string;
  description?: string;
  primaryButtonText: string;
  primaryButtonHref: string;
  secondaryButtonText?: string;
  secondaryButtonHref?: string;
  imageSrc?: string;
  videoSrc?: string;
  imageAlt?: string;
  imageOnRight?: boolean;
}

const {
  title,
  description,
  primaryButtonText,
  primaryButtonHref,
  secondaryButtonText,
  secondaryButtonHref,
  imageSrc,
  videoSrc,
  imageAlt = "Hero image",
  imageOnRight = true,
} = Astro.props;
---

<section class={`hero-tile ${imageOnRight ? 'image-right' : 'image-left'}`}>
  <div class="content-tile">
    <h1 class="hero-title">{title}</h1>
    {description && <p class="hero-description">{description}</p>}
    <div class="cta-buttons">
      <a href={primaryButtonHref} class="btn btn-primary">
        {primaryButtonText}
      </a>
      {
        secondaryButtonText && secondaryButtonHref && (
          <a href={secondaryButtonHref} class="btn btn-secondary">
            {secondaryButtonText}
          </a>
        )
      }
    </div>
  </div>
  <div class="media-tile">
    {
      videoSrc ? (
        <video autoplay loop muted playsinline class="hero-video">
          <source src={videoSrc} type="video/mp4" />
          Your browser does not support the video tag.
        </video>
      ) : imageSrc ? (
        <img src={imageSrc} alt={imageAlt} class="hero-image" />
      ) : (
        <div class="placeholder-media">
          <p>Image or Video</p>
        </div>
      )
    }
  </div>
</section>

<style>
  .hero-tile {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
    padding: 4rem 2rem;
    max-width: 1400px;
    margin: 0 auto;
    min-height: 500px;
  }

  .hero-tile.image-left {
    grid-template-columns: 1fr 1fr;
  }

  .hero-tile.image-left .content-tile {
    order: 2;
  }

  .hero-tile.image-left .media-tile {
    order: 1;
  }

  .content-tile {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    padding: 2rem;
  }

  .hero-title {
    font-size: 3.5rem;
    font-weight: 700;
    line-height: 1.1;
    margin: 0;
    color: rgb(var(--black));
    font-family: "Atkinson", sans-serif;
  }

  .hero-description {
    font-size: 1.2rem;
    line-height: 1.6;
    color: rgb(var(--gray-dark));
    margin: 0;
  }

  .cta-buttons {
    display: flex;
    gap: 1.5rem;
    flex-wrap: wrap;
  }

  .btn {
    display: inline-block;
    padding: 1rem 2.5rem;
    font-size: 1.1rem;
    font-weight: 600;
    text-decoration: none;
    border-radius: 50px;
    transition: all 0.3s ease;
    cursor: pointer;
    font-family: "Atkinson", sans-serif;
  }

  .btn-primary {
    background-color: rgb(var(--black));
    color: white;
    border: 2px solid rgb(var(--black));
  }

  .btn-primary:hover {
    background-color: rgb(var(--gray-dark));
    border-color: rgb(var(--gray-dark));
    transform: translateY(-2px);
    box-shadow: var(--box-shadow);
  }

  .btn-secondary {
    background-color: white;
    color: rgb(var(--black));
    border: 2px solid rgb(var(--black));
  }

  .btn-secondary:hover {
    background-color: rgb(var(--gray-light));
    transform: translateY(-2px);
    box-shadow: var(--box-shadow);
  }

  .media-tile {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
  }

  .hero-image {
    width: 100%;
    height: auto;
    max-width: 600px;
    object-fit: contain;
    border-radius: 8px;
  }

  .hero-video {
    width: 100%;
    height: auto;
    max-width: 600px;
    border-radius: 8px;
  }

  .placeholder-media {
    width: 100%;
    max-width: 600px;
    aspect-ratio: 1;
    background: linear-gradient(135deg, rgb(var(--gray-light)) 0%, white 100%);
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: rgb(var(--gray));
    font-size: 1.5rem;
  }

  /* Responsive design */
  @media (max-width: 968px) {
    .hero-tile {
      grid-template-columns: 1fr;
      gap: 2rem;
      padding: 3rem 1.5rem;
      min-height: auto;
    }

    .hero-tile.image-left .content-tile {
      order: 1;
    }

    .hero-tile.image-left .media-tile {
      order: 2;
    }

    .hero-title {
      font-size: 2.5rem;
    }

    .content-tile {
      padding: 1rem;
    }

    .media-tile {
      padding: 1rem;
    }
  }

  @media (max-width: 640px) {
    .hero-tile {
      padding: 2rem 1rem;
    }

    .hero-title {
      font-size: 2rem;
    }

    .hero-description {
      font-size: 1rem;
    }

    .cta-buttons {
      flex-direction: column;
      gap: 1rem;
    }

    .btn {
      padding: 0.875rem 2rem;
      font-size: 1rem;
      text-align: center;
      width: 100%;
    }
  }
</style>
