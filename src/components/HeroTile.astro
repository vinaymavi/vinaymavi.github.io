---
import { Image } from "astro:assets";

export interface Props {
  title: string;
  description?: string;
  primaryButtonText?: string;
  primaryButtonHref?: string;
  secondaryButtonText?: string;
  secondaryButtonHref?: string;
  imageSrc?: any;
  videoSrc?: string;
  imageAlt?: string;
  imageOnRight?: boolean;
}

const {
  title,
  description,
  primaryButtonText,
  primaryButtonHref,
  secondaryButtonText,
  secondaryButtonHref,
  imageSrc,
  videoSrc,
  imageAlt = "Hero image",
  imageOnRight = true,
} = Astro.props;
---

<section
  class={`flex gap-16 items-center  mx-auto min-h-[500px] ${imageOnRight ? "flex-col md:flex-row" : "flex-col md:flex-row-reverse"}`}
>
  <div class="flex flex-col gap-8 p-8 md:order-1 flex-1">
    <h1
      class="text-6xl font-bold leading-tight m-0 text-black font-['Atkinson'] md:text-4xl sm:text-3xl"
    >
      {title}
    </h1>
    {
      description && (
        <p class="text-xl leading-relaxed text-gray-700 m-0 md:text-lg sm:text-base">
          {description}
        </p>
      )
    }
    <div class="flex gap-6 flex-wrap sm:flex-col sm:gap-4">
      {
        primaryButtonText && primaryButtonHref && (
          <a
            href={primaryButtonHref}
            class="inline-block px-10 py-4 text-lg font-semibold no-underline rounded-full transition-all duration-300 cursor-pointer font-['Atkinson'] bg-black text-white border-2 border-black hover:bg-gray-700 hover:border-gray-700 hover:-translate-y-0.5 hover:shadow-lg motion-safe:hover:transform sm:px-8 sm:py-3.5 sm:text-base sm:text-center sm:w-full"
          >
            {primaryButtonText}
          </a>
        )
      }
      {
        secondaryButtonText && secondaryButtonHref && (
          <a
            href={secondaryButtonHref}
            class="inline-block px-10 py-4 text-lg font-semibold no-underline rounded-full transition-all duration-300 cursor-pointer font-['Atkinson'] bg-white text-black border-2 border-black hover:bg-gray-100 hover:-translate-y-0.5 hover:shadow-lg motion-safe:hover:transform sm:px-8 sm:py-3.5 sm:text-base sm:text-center sm:w-full"
          >
            {secondaryButtonText}
          </a>
        )
      }
    </div>
  </div>
  <div class="flex items-center justify-center p-8 md:order-2 flex-1">
    {
      videoSrc ? (
        <video
          autoplay
          loop
          muted
          playsinline
          controls
          class="w-full h-auto max-w-[600px] rounded-lg motion-reduce:autoplay-none"
        >
          <source src={videoSrc} type="video/mp4" />
          Your browser does not support the video tag.
        </video>
      ) : imageSrc ? (
        <Image
          src={imageSrc}
          alt={imageAlt}
          class="w-full h-auto rounded-lg"
          style={{
            width: "600px",
          }}
        />
      ) : (
        <div class="w-full max-w-[600px] aspect-square bg-linear-to-br from-gray-100 to-white rounded-lg flex items-center justify-center text-gray-500 text-xl">
          <p>Image or Video</p>
        </div>
      )
    }
  </div>
</section>

<script>
  // Respect user's reduced motion preference for video autoplay
  document.addEventListener("DOMContentLoaded", () => {
    if (window.matchMedia("(prefers-reduced-motion: reduce)").matches) {
      const videos = document.querySelectorAll("video[autoplay]");
      videos.forEach((video) => {
        if (video instanceof HTMLVideoElement) {
          video.autoplay = false;
          video.pause();
        }
      });
    }
  });
</script>
